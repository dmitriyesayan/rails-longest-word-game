<div class="margin">
  <h1>New game</h1>
</div>
<ul>
  <% @letter_array.each do |letter| %>
  <li><%= letter%></li>
  <% end  %>
</ul>
<form action="/results" method="POST" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letter_array %>
  <label for="Response field">Submit your response:</label><br>
  <div class="flex">
    <input type="text" id="response-field" name="answer"><br><input id="submit-bttn" type="submit" value="Submit">
  </div>
</form>
